<div id="left-bar" class="col-md-4 col-xs-12">
  <div class="list-category-posts recent_posts">
    <div class="category-name category-with-margin-bottom">
      <span id="recent" class="btn">
        <%= t "layouts.recent" %>
      </span>
    </div>
    <div id="list-posts">
      <%= render "layouts/list_posts", posts: @recent_posts %>
    </div>
  </div>

  <div class="list-category-posts favourite_posts">
    <div class="category-name category-with-margin-bottom">
      <span id="hotest" class="btn">
        <%= t "layouts.favourite" %>
      </span>
    </div>
    <div id="list-posts">
      <%= render "layouts/list_posts", posts: @favourite_posts %>
    </div>
  </div>
</div>
