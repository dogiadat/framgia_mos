<div class="row">
  <div id="wrapper-body">
    <div id="slide"></div>
    <div id="main-app" class="col-md-8 col-xs-12">
      <div class="category-name category-with-margin-bottom">
        <span id="home-page" class="btn">
          <%= t ".home_page" %>
        </span>
      </div>
      <% if @first_post %>
        <div id="first-post" >
          <%= link_to post_path(@first_post) do %>
            <%= image_tag @first_post.image %>
          <% end %>
          <div class="description">
            <h3 id="first-post-title"><%= link_to @first_post.title, @first_post %></h3>
            <span><%= truncate @first_post.description,
              length: Settings.static_pages.truncate_first_post_description %></span>
          </div>
        </div>
      <% else %>
        <p><%= t "static_pages.home.no_data" %></p>
      <% end %>
      <% @category_roots.each_with_index do |category, index| %>
        <% if category.all_posts.any? %>
          <div class="posts-category">
            <% if vertical_display_post index %>
              <div class="left">
                <div class="category-name category-name-vertical">
                  <a id="category-name" class="btn">
                    <%= category.name.upcase %>
                  </a>
                </div>
                <%= link_to category.all_posts.last do  %>
                  <%= image_tag category.all_posts.last.image, class: "img-responsive" %>
                <% end %>
                <h4><%= link_to category.all_posts.last.title, category.all_posts.last %></h4>
                <span><%= truncate category.all_posts.last.description,
                  length: Settings.static_pages.truncate_post_description %></span>
                <%= render "layouts/list_posts", posts: category.all_posts.reverse
                 .drop(1).take(Settings.static_pages.number_category_posts) %>
              </div>
            <% else %>
              <div class="clearfix"></div>
              <div class="category-name category-name-horizontal">
                <a id="category-name" class="btn">
                  <%= category.name %>
                </a>
              </div>
              <div class="left">
                <%= link_to category.all_posts.last do %>
                  <%= image_tag category.all_posts.last.image, class: "img-responsive" %>
                <% end %>
                <h4><%= link_to category.all_posts.last.title, category.all_posts.last %></h4>
                <span><%= truncate category.all_posts.last.description,
                  length: Settings.static_pages.truncate_post_description %></span>
              </div>
              <div class="left">
                <%= render "layouts/list_posts", posts: category.all_posts
                  .reverse.drop(1).take(Settings.static_pages.number_category_posts) %>
              </div>
              <div class="clearfix"></div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= render "layouts/left_content" %>
  </div>
</div>
